// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+x",
        "command": "editor.action.clipboardCutAction",
        "when": "!agdaMode"
    },
    {
        "key": "ctrl+x",
        "command": "-editor.action.clipboardCutAction"
    },
    {
        "key": "left",
        "command": "settings.action.focusTOC",
        "when": "inSettingsEditor && settingRowFocus && !agdaMode"
    },
    {
        "key": "left",
        "command": "-settings.action.focusTOC",
        "when": "inSettingsEditor && settingRowFocus"
    },
    {
        "key": "ctrl+alt+l",
        "command": "haskell.commands.restartServer",
        "when": "editorTextFocus && editorLangId == 'haskell'"
    },
    {
        "key": "alt+k alt+i",
        "command": "haskell.showDocumentation",
        "when": "editorTextFocus && editorLangId == 'haskell'"
    },
    {
        "key": "ctrl+p",
        "command": "extension.quickOpen.withPrefill",
        "when": "editorTextFocus && editorHasSelection && !editorHasMultipleSelections"
    },
    {
        "key": "ctrl+k ctrl+u",
        "command": "-editor.action.removeCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+k ctrl+u",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    },
    {
        "key": "f12",
        "command": "-editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
    }
]